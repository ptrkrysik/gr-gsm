FROM fedora:36
MAINTAINER Vasil Velichkov

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    cmake \
    autoconf \
    libtool \
    pkg-config \
    build-essential \
    libcppunit-dev \
    swig \
    doxygen \
    liblog4cpp5-dev \
    python3-docutils \
    python3-scipy \
    gnuradio-dev \
    liborc-dev \
    libosmocore-dev \
    gr-osmosdr

COPY ./ /src/
RUN mkdir /src/build
WORKDIR /src/build

RUN cmake .. && \
    # The parallel build sometimes fails when the .grc_gnuradio
    # and .gnuradio directories do not exist
    mkdir $HOME/.grc_gnuradio/ $HOME/.gnuradio/ && \
    make -j $(nproc) && \
    make install && \
    ldconfig && \
    make CTEST_OUTPUT_ON_FAILURE=1 test
